<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pre_qc_config_tree" model="ir.ui.view">
        <field name="name">pre.qc.config.tree</field>
        <field name="model">pre.qc.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_pre_qc_config_form" model="ir.ui.view">
        <field name="name">pre.qc.config.form</field>
        <field name="model">pre.qc.config</field>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="prefix"/>
                            <field name="seq_num"/>
                            <button name="create_sequences" type="object" string="Add" class="oe_highlight"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Config Lines">
                            <field name="line_id">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="sequence"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pre_qc_config" model="ir.actions.act_window">
        <field name="name">QC Stages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pre.qc.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Pre-QC Stage!
            </p>
        </field>
    </record>

    <menuitem id="menu_pre_qc_config"
              name="QC Stages"
              action="action_pre_qc_config"
              parent="usl_qc.menu_qc_config"
              sequence="10"/>
</odoo>