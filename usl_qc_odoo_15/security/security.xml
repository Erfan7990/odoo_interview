<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_smart_hitech">
        <field name="name">Smart Hi-Tech</field>
        <field name="description">Smart Hi-Tech Category</field>
    </record>

    <record id="group_smart_hitech_product_manager" model="res.groups">
        <field name="name">Production Manager</field>
        <field name="category_id" ref="module_category_smart_hitech"/>
    </record>

    <record id="group_smart_hitech_line_manager" model="res.groups">
        <field name="name">Line Manager</field>
        <field name="category_id" ref="module_category_smart_hitech"/>
    </record>

    <record id="group_smart_hitech_engineer" model="res.groups">
        <field name="name">Engineer</field>
        <field name="category_id" ref="module_category_smart_hitech"/>
    </record>

    <record id="group_smart_hitech_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="module_category_smart_hitech"/>
        <field name="implied_ids" eval="[(4, ref('group_smart_hitech_product_manager')),
        (4, ref('group_smart_hitech_line_manager')),(4, ref('group_smart_hitech_engineer'))]"/>

    </record>

    <record model="ir.rule" id="engineer_rule">
        <field name="name">Engineer Rule</field>
        <field name="model_id" ref="model_engineer_profile"/>
        <field name="domain_force">[('engineer.id','=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_smart_hitech_engineer'))]"/>
    </record>

    <record model="ir.rule" id="admin_rule_engineer">
        <field name="name">Admin Engineer Rule</field>
        <field name="model_id" ref="model_engineer_profile"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_smart_hitech_admin'))]"/>
    </record>

    <record model="ir.rule" id="line_manager_rule">
        <field name="name">Line Manager Rule</field>
        <field name="model_id" ref="model_line_management"/>
        <field name="domain_force">[('line_manager.id','=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_smart_hitech_line_manager'))]"/>
    </record>

    <record model="ir.rule" id="admin_rule_line_manager">
        <field name="name">Admin Line Manager Rule</field>
        <field name="model_id" ref="model_line_management"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_smart_hitech_admin'))]"/>
    </record>

    <record model="ir.rule" id="product_manager_rule">
        <field name="name">Product Manager Rule</field>
        <field name="model_id" ref="model_production_planning"/>
        <field name="domain_force">[('product_manager.id','=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_smart_hitech_product_manager'))]"/>
    </record>

    <record model="ir.rule" id="admin_product_manager_rule">
        <field name="name">Admin Product Manager Rule</field>
        <field name="model_id" ref="model_production_planning"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_smart_hitech_admin'))]"/>
    </record>

</odoo>