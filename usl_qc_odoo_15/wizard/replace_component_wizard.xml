<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="replace_component_form_view" model="ir.ui.view">
        <field name="name">replace.component.wizard.form</field>
        <field name="model">replace.component.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="engineer_id"
                                   options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"
                                   invisible="1" />
                            <field name="bom_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"
                                   invisible="1"/>
                            <field name="product_id"
                                   options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" readonly="1"/>
                            <field name="qty"  readonly="1"/>
                            <field name="qty_done"  invisible="1" readonly="1"/>
                            <field name="product_uom_id"
                                   options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"
                                   invisible="1"/>
                            <field name="lot_ids" widget="many2many_tags"
                                   options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" invisible="1"/>
                            <field name="lot_id"
                                   options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        </group>

                        <group>
                            <field name="replace_lot_name"/>
                        </group>
                    </group>

                </sheet>
                <footer>
                    <button string="Confirm" class="oe_highlight" type="object" name="action_replace_component"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>